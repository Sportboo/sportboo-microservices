model User {
  id                    Int               @id @default(autoincrement())
  fullname              String
  username              String?           @unique
  email                 String            @unique
  sportbooId            String            @unique
  pin                   String?
  phone                 String?
  profileImgUrl         String?
  emailVerified         Boolean           @default(false)
  phoneVerified         Boolean           @default(false)
  kycVerified           Boolean           @default(false)
  addressVerified       Boolean           @default(false)
  inSyncWithChat        Boolean           @default(false)
  goat                  Int?
  accountStatus         UserAccountStatus @default(unverified)
  authAppId             String?
  deviceId              String?
  timeOut               DateTime?
  timeOutHms            String?
  residentialAddress    Json?
  preferences           Json?
  externalCommunication Json?
  inAppCommunication    Json?
  securityPreferences   Json?
  walletActivities      Json?
  securityAlerts        Json?
  betUpdates            Json?
  bookieAlerts          Json?
  productUpdates        Json?
  accountVerification   Json?
  reward                Json?
  depositLimit          Json?
  accountDailyLimit     Json?
  playerFavorites       Int[]
  competitionFavorites  Int[]
  matchFavorites        Int[]
  teamFavorites         Int[]
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
}

enum UserAccountStatus {
  verified
  unverified
  pending
}
