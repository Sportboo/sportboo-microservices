model IamUser {
  id                      Int                      @id @default(autoincrement())
  email                   String                   @unique
  passwordHash            String?
  role                    Role
  authMethod              AuthMethod               @default(email)
  accountStatus           AccountStatus            @default(active)
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  passwordHistory         PasswordHistory[]
  passwordResetTokens     PasswordResetToken[]
  emailVerificationTokens EmailVerificationToken[]
  passwordChangeToken     PasswordChangeToken[]

  @@unique([email, role])
}

model PasswordHistory {
  id           Int       @id @default(autoincrement())
  iamUserId    Int
  passwordHash String
  createdAt    DateTime  @default(now())
  expiresAt    DateTime?
  iamUser      IamUser   @relation(fields: [iamUserId], references: [id], onDelete: Cascade)

  @@index([iamUserId])
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  iamUserId Int
  token     String   @unique
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  iamUser   IamUser  @relation(fields: [iamUserId], references: [id], onDelete: Cascade)

  @@index([iamUserId])
}

model PasswordChangeToken {
  id           Int      @id @default(autoincrement())
  iamUserId    Int
  token        String   @unique
  expiresAt    DateTime
  passwordHash String
  isUsed       Boolean  @default(false)
  createdAt    DateTime @default(now())
  iamUser      IamUser  @relation(fields: [iamUserId], references: [id], onDelete: Cascade)

  @@index([iamUserId])
}

model EmailVerificationToken {
  id        Int      @id @default(autoincrement())
  iamUserId Int
  token     String   @unique
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  iamUser   IamUser  @relation(fields: [iamUserId], references: [id], onDelete: Cascade)

  @@index([iamUserId])
}

enum Role {
  user
  admin
  super_admin
}

enum AuthMethod {
  email
  google
  facebook
  apple
  anonymous
}

enum AccountStatus {
  active
  inactive
  suspended
  deleted
}
